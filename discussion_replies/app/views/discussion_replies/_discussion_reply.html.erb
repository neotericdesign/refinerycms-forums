<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(discussion_reply) -%>">
  <span class='title'>
    <%= discussion_reply.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), discussion_reply_url(discussion_reply),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_discussion_reply_path(discussion_reply),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_discussion_reply_path(discussion_reply),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('shared.admin.delete.message', :title => discussion_reply.title),
        :'data-method' => :delete %>
  </span>
</li>
